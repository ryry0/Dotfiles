# Directory
setopt AUTO_CD			# type directory name to cd
setopt PUSHD_IGNORE_DUPS 	# don't push dir dups to pushd stack
setopt AUTO_PUSHD

# History
setopt APPEND_HISTORY		# multiple sessions add to one history
setopt INC_APPEND_HISTORY	# include history as it's typed
setopt HIST_IGNORE_DUPS		# don't append to hist if dup of the prev event
setopt HIST_REDUCE_BLANKS	# reduce amount of whitespace in history
setopt NO_HIST_VERIFY		# don't expand before hist expansion is run
setopt SHARE_HISTORY		# share history between concurrent zshs

# Expansion and Globbing
setopt EXTENDED_GLOB		# treat #~^ as part of patterns for file name gen
setopt EQUALS			# enable = substitutions
setopt BRACE_CCL		# allow curly brace subs {ab}c -> ab ac
setopt NULL_GLOB		# remove glob if it matches nothing

# Completion
setopt COMPLETE_IN_WORD		# can complete in middle of word
setopt ALWAYS_TO_END		# move cursor to end after completion
setopt NO_MENU_COMPLETE		# don't auto fill first result
setopt AUTO_MENU		# use menu complete on second <TAB>
setopt LIST_AMBIGUOUS		# complete as much as possible before ambiguous

# Prompt
setopt PROMPT_SUBST		# expand params, arith, and commands in prompt
setopt NO_BEEP			# NO BEEPING
setopt TRANSIENT_RPROMPT	# only show rprompt on current prompt
setopt ALWAYS_LAST_PROMPT	# move cursor back up a line with menu selects

# Correction
setopt CORRECT			# correct commands

# Scripts and Functions
setopt MULTIOS			# implicit tees and cats when multi redirecting

# Input/Output
setopt NO_FLOW_CONTROL		# ignores ^S/^Q as flow control bits in terminal

# Job Control
setopt AUTO_RESUME		# allow typing in name of job to resume job
setopt NO_BG_NICE		# don't run bg jobs at lower prio
setopt LONG_LIST_JOBS		# display PID when suspending processes
